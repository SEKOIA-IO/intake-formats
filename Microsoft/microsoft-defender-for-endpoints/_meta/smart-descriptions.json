      {
        "field": "host.name"
      },
      {
        "field": "process.executable"
      }
    ],
    "relationships": [
      {
        "source": "host.name",
        "target": "process.executable",
        "type": "was executed on"
      }
    ]
  },
  {
    "value": "{user.domain}\\{user.name} logged on {host.name}",
